{
  "expo": {
    "name": "EatMe",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/EatMe_icon_v1.png",
    "userInterfaceStyle": "light",
    "scheme": "eatme",
    "android": {
      "package": "com.eatme.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/EatMe_icon_v1.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "eatme",
              "host": "*"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "ios": {
      "bundleIdentifier": "com.eatme.app",
      "icon": "./assets/images/EatMe_icon_v1.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to show nearby restaurants and provide personalized recommendations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to show nearby restaurants and provide personalized recommendations."
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow EatMe to use your location to discover nearby restaurants."
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "sk.eyJ1IjoiYWtsYXNhIiwiYSI6ImNtZzMxNzdueTBldmMybHB1aHhwa3o4eGYifQ.AeDOBIHaWjsvAh4BqDw6Rg"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e58b678b-ccce-4ae8-a799-c15e13007040"
      }
    }
  }
}
